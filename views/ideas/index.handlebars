{{#each ideas}}
<div class="card blue-grey darken-1">
    <div class="card-content white-text" style="margin-top: 0.15rem !important">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        <a href="/ideas/edit/{{id}}" class="btn waves-effect waves-light edit-btn left">Edit</a>
        <form method="post" action="/ideas/{{id}}?_method=DELETE">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn waves-effect waves-light left" style="margin-bottom: -2rem">Delete</button>
        </form>
    </div>
</div>

{{else}}
<p class="amber lighten-3 grey-text text-center flow-text">No video ideas listed!</p>
{{/each}}