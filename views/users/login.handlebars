<div class="row grey lighten-3">
    <form class="col s12 m12" method="post" action="/users/login">
        <h3 class="amber-text teal flow-text text-center col m9 center lighten-2    ">Account Login</h3>
        <div class="row">
            <div class="input-field col s12 m9">
                <input id="email" type="email" class="validate" required autofocus name="email">
                <label for="email">Email</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m9">
                <input id="password" type="password" class="validate" required name="password">
                <label for="password">Password</label>
            </div>
        </div>
        <button class="btn waves-light waves-effect" type="submit">Submit</button>
    </form>
</div>